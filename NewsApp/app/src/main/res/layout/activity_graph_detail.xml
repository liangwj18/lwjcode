<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/detail_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="@string/title_test"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/detail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail_description"
                    android:layout_width="369dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/influence_icon"
                    android:gravity="center"
                    android:text="Xinhua"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/influence_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/circle_strong" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="470dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_properties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="属性" />

                <ListView
                    android:id="@+id/detail_properties"
                    android:layout_width="match_parent"
                    android:layout_height="251dp">

                </ListView>

                <TextView
                    android:id="@+id/title_relation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/detail_left_container"
                    android:gravity="center"
                    android:text="关系"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ListView
                    android:id="@+id/detail_relations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </ListView>

            </LinearLayout>


        </LinearLayout>

</RelativeLayout>