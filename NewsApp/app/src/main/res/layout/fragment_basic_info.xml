<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.detail.BasicInfoFragment">

    <RelativeLayout
        android:id="@+id/basic_info_avi_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/basic_info_avi"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            app:indicatorColor="@color/blue"
            app:indicatorName="LineScalePulseOutRapidIndicator" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/basic_info_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/basic_info_avi_container"/>

</RelativeLayout>